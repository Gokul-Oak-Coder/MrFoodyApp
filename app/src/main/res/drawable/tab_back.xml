<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected tab -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/my_red"/> <!-- Background color of selected tab -->
            <corners android:radius="20dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Unselected tab -->
    <item>
        <shape android:shape="rectangle">
<!--            <solid android:color="@android:color/white"/> &lt;!&ndash; Background color of unselected tab &ndash;&gt;-->
            <corners android:radius="20dp"/> <!-- Rounded corners -->
<!--            <stroke-->
<!--                android:width="2dp"-->
<!--                android:color="@android:color/white"/> &lt;!&ndash; Stroke color for unselected tab &ndash;&gt;-->
        </shape>
    </item>
</selector>
